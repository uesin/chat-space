.main-chat
 .mainchat__main
  .main-chat__main__header 
   .main-chat__main__header__left
    .main-chat__main__header__left__group-name
     = @group.name
     .main-chat__main__header__left__member-name
      member:
      - @group.users.each do |user|
       = user.name
   .main-chat__main__header__right
    =link_to edit_group_path(current_user) do
     edit
 .main-chat__message
  = render @messages
  .main-chat__message__info
   .main-chat__message__info__name  
   .main-chat__message__info__time
  .main-chat__message__text
 .main-chat__form
  = form_for [@group, @message] do |f|
   .main-chat__form__content
    .main-chat__form__content__input
     = f.text_field :content, class: 'main-chat__form__content__input__textbox', placeholder: 'type a message' 
     = f.label :image, class: 'main-chat__form__content__input__image' do
      = icon('fas', 'image')
      = f.file_field :image, class: 'main-chat__form__content__input__image__file'

     = f.submit 'Send', class: 'main-chat__form__content__send'
  
 



